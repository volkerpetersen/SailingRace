<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:background="@drawable/lake_land"
    android:orientation="vertical"
    tools:context=".Activity_Main">

    <TextView
        style="@style/TextAppearance.AppCompat.Display3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:textColor="#FF0000"
        />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button android:id="@+id/button_timer"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_timer"
            android:onClick="start_timerActivity"
            android:layout_gravity="start" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button android:id="@+id/button_racing"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_racing"
            android:onClick="start_raceActivity" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button android:id="@+id/button_settings"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_settings"
            android:onClick="start_settingsActivity" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_gravity="start|bottom" >
        <TextView
            android:id="@+id/awdLabel"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="start"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/awdValue"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="end"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/awsLabel"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="start"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/awsValue"
            style="@style/TextAppearance.AppCompat.Headline"
            android:gravity="end"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:layout_gravity="start|bottom" >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="start|bottom"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="40dp"
            android:text="@string/blank_entry"
            android:id="@+id/versionID"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            />
        <Switch
            android:id="@+id/windexSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|bottom"
            android:paddingBottom="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:text="Anemometer" />
    </LinearLayout>

</LinearLayout>
